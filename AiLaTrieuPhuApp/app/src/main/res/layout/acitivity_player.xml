<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_player"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/player_background">

    <LinearLayout
        android:id="@+id/ll_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#ff210030">

            <ImageView
                android:id="@+id/img_player"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_no_avatar" />

            <TextView
                android:id="@+id/txt_khach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/img_player"
                android:text="Khách"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_thi_sinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_khach"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/img_player"
                android:text="Thí sinh"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/txt_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="30"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/pg_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/progressbar_time" />

            <ImageView
                android:id="@+id/img_money"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/txt_money"
                android:src="@drawable/img_money" />

            <TextView
                android:id="@+id/txt_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="100,000"
                android:textColor="#ffffff" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_stop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/btn_stop_bg" />

            <ImageView
                android:id="@+id/btn_change"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/btn_change_bg" />

            <ImageView
                android:id="@+id/btn_5050"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/btn_5050_bg" />

            <ImageView
                android:id="@+id/btn_audience"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/btn_audience_bg" />

            <ImageView
                android:id="@+id/btn_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:src="@drawable/btn_call_bg" />


        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3">

            <TextView
                android:id="@+id/txt_question"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:background="@drawable/player_question_background"
                android:gravity="center"
                android:padding="20dp"
                android:text="Loài sinh vật nào sau đây biết bơi!!!"
                android:textColor="@android:color/holo_orange_light"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_level"
                android:layout_width="240dp"
                android:layout_height="36dp"
                android:layout_gravity="center|top"
                android:background="@drawable/player_order_question"
                android:gravity="center"
                android:text="Câu 1"
                android:textColor="#9C27B0"
                android:textSize="18sp"
                android:textStyle="bold" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="72dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">

            <TextView
                android:id="@+id/txt_case_a"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_answer"
                android:gravity="center_vertical"
                android:paddingLeft="58dp"
                android:text="A: Dơi"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_case_b"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_answer"
                android:gravity="center_vertical"
                android:paddingLeft="58dp"
                android:text="B: Cá rô"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_case_c"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_answer"
                android:gravity="center_vertical"
                android:paddingLeft="58dp"
                android:text="C: Ốc bươi vàng"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/txt_case_d"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/btn_answer"
                android:gravity="center_vertical"
                android:paddingLeft="58dp"
                android:text="D: Ong bắp cày"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_money"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start" />
</android.support.v4.widget.DrawerLayout>