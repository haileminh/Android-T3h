<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#FF05A9F4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/im_star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/ic_star_border_white_24dp" />

                <ImageView
                    android:id="@+id/im_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_more_vert_white_24dp" />
                <ImageView
                    android:id="@+id/im_pen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/im_more"
                    android:src="@drawable/ic_create_white_24dp" />
                <ImageView
                    android:id="@+id/im_account"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_account_circle_white_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerHorizontal="true"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:text="@string/jimmy"
                    android:layout_below="@id/im_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:background="#FFF4F4F4"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">
            <RelativeLayout
                android:background="#FFFAFAFA"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/im_phone"
                    android:src="@drawable/ic_call_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="8dp"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:text="01655303878"
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/im_phone"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#333"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="Mobie"
                    android:layout_below="@id/tv_phone"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/im_phone"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_speaker_notes_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <RelativeLayout
                android:background="#FFFAFAFA"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/im_email"
                    android:src="@drawable/ic_email_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:paddingLeft="8dp"
                    android:textColor="#333"
                    android:textSize="18sp"
                    android:text="01655303878"
                    android:id="@+id/tv_phone2"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/im_email"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="#333"
                    android:paddingLeft="8dp"
                    android:textSize="18sp"
                    android:text="Mobie"
                    android:layout_below="@id/tv_phone2"
                    android:id="@+id/tv_name1"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/im_email"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:background="#FFF4F4F4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_library_books_white_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_camera_enhance_white_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_account_circle_white_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/ic_camera_enhance_white_24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>